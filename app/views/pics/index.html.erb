<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @pics.each_with_index do |pic, index|%>
    <li data-target="#carousel-example-generic" data-slide-to="<% index %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @pics.each do |pic| %>
        <div class="<% if pic.equal?(@pics.first);%> active <% end %> item" style="background-size: cover; background-position: center center; background-image: url(<%= pic.url %>);height: 600px">
            <div class="carousel-caption">
                <h3><%= link_to pic.header, pic %></h3>
          </div>
        </div>
      <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

